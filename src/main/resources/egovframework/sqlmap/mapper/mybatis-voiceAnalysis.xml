<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aiinterview.analysis.dao.VoiceAnalysisMapper">

	<insert id="create">
		INSERT INTO VOICE_ANALYSIS (VOICE_ANALYSIS_SQ,
									VOICE_DECIBEL,
									VOICE_RANGE,
									ANS_SQ)
		     VALUES (VOICE_ANALYSIS_SQ.NEXTVAL,
						NVL(#{voiceDecibel},0),
						<if test="voiceRange != null and voiceRange != ''">
							NVL(#{voiceRange},0),
						</if>
						<if test="voiceRange == '' or voiceRange == null">
							null,
						</if>
						#{ansSq})
	</insert>
	
	<select id="retrieveList" resultType="com.aiinterview.analysis.vo.VoiceAnalysisVO">
		SELECT *
		FROM VOICE_ANALYSIS
		WHERE ANS_SQ = #{ansSq}
	</select>
	

</mapper>