<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aiinterview.member.dao.MemberMapper">

	<select id="getMember" parameterType="String" resultType="com.aiinterview.member.vo.MemberVO" >
		SELECT *
		FROM MEMBER
		WHERE MEM_ID = #{memId}
	</select>

	<select id="memberIdSearch" parameterType="com.aiinterview.member.vo.MemberVO"
		resultType="com.aiinterview.member.vo.MemberVO" >
		SELECT *
		FROM MEMBER
		WHERE MEM_NM = #{memNm}
		AND MEM_TEL = #{memTel}
	</select>

	<select id="memberPwSearch" parameterType="com.aiinterview.member.vo.MemberVO"
		resultType="com.aiinterview.member.vo.MemberVO">
		SELECT *
		FROM MEMBER
		WHERE MEM_ID = #{memId}
		AND MEM_NM = #{memNm}
		AND MEM_TEL = #{memTel}
	</select>
	
	<update id="memberPwChange" parameterType="com.aiinterview.member.vo.MemberVO">
		UPDATE MEMBER
		SET MEM_PW = #{memPw}
		WHERE MEM_ID = #{memId}
	</update>

	<select id="aliasCheck" parameterType="String" resultType="com.aiinterview.member.vo.MemberVO" >
		SELECT *
		FROM MEMBER
		WHERE MEM_ALIAS = #{memAlias}
	</select>

</mapper>